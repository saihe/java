import java.util.ArrayList;

public class Result{
	static ArrayList<Integer> result = new ArrayList<Integer>();
	static ArrayList<Integer> plus = new ArrayList<Integer>();
	static ArrayList<Integer> minus = new ArrayList<Integer>();


	//入金
	public static ArrayList<Integer> getPlus(Integer p){
		plus.add(p);
		return plus;
	}

	//出金
	public static ArrayList<Integer> getMinus(Integer m){
		minus.add(m);
		return minus;
	}

	//残高計算
	public static ArrayList<Integer> getResult(Integer getPlus , Integer getMinus){
		result.add(getPlus + getMinus);
		return result;
	}

}
